<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/add_cart_item_color_layout"
    android:layout_width="170dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:background="@drawable/add_cart_color_normal_shape">
    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:id="@+id/add_cart_item_color_image"
        android:layout_width="match_parent"
        android:layout_height="155dp"
        app:round="10dp"
        android:scaleType="centerCrop"
        android:background="@drawable/laoshu"
        >
    </androidx.constraintlayout.utils.widget.ImageFilterView>
    <TextView
        android:id="@+id/add_cart_item_color_name"
        android:layout_width="match_parent"
        android:text="商品名"
        android:gravity="center"
        android:layout_height="20dp">
    </TextView>

</LinearLayout>