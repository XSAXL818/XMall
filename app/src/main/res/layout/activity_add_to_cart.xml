<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddToCartActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#DCE2E8"
        >
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/add_cart_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:round="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/laoshu"
            android:layout_weight="1">
        </androidx.constraintlayout.utils.widget.ImageFilterView>
        <TextView
            android:id="@+id/add_cart_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="商品名"
            android:layout_weight="2"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            style="@style/bold_20_black"
            >
        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            style="@style/bold_20_black"
            android:text="颜色"
            >
        </TextView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_cart_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="4">
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            style="@style/bold_20_black"
            android:text="尺码"
            >
        </TextView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/add_cart_size"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:text="数量"
            android:layout_weight="1."
            android:gravity="center_vertical"
            android:layout_gravity="center"
            style="@style/bold_20_black"
            >
        </TextView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/add_cart_minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="-"
                android:layout_weight="1"
                android:textSize="20dp"
                android:onClick="minus"

                >
            </Button>
            <TextView
                android:id="@+id/add_cart_num"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:text="1"
                style="@style/bold_20_black"
                android:layout_weight="1"
                android:gravity="center"
                >
            </TextView>
            <Button
                android:id="@+id/add_cart_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:layout_weight="1"
                android:onClick="plus"
                android:textSize="20dp"
                >
            </Button>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/add_cart_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:text="加入购物车"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:background="@drawable/new_button"
        >

    </Button>


</LinearLayout>