<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<!--    android 指定形状内部的填充颜色-->
    <solid android:color="#FFFFFF" />

<!--    指定形状轮廓的粗细与颜色-->
    <stroke
        android:width="3dp"
        android:color="#673AB7" />
<!--    指定形状为四个圆角的半径-->
    <corners android:radius="10dp" />

<!--    指定形状四个方向的间距-->
    <padding
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp" />

</shape>